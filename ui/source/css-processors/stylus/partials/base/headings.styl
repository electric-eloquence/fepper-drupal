/* Headings */
/*Further Reading: http:/csswizardry.com/2012/02/pragmatic-practical-font-sizing-in-css/ */
h1, .alpha
  line-height: 1.2
h2, .beta
  line-height: 1.2
  margin-top: 0.5em
h3, .gamma
  line-height: 1.2
h4
  font-size: 1.0625em
  font-weight: bold
  margin-bottom: $space
/* Subheadings */
.subheading
  font-family: $font-secondary
  font-weight: normal
