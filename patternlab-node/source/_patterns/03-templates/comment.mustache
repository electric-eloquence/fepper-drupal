{{# templates-comment? }}
  {{{ fpo_template_content }}}
{{/ templates-comment? }}
<article{{{ comment_attributes }}}>
  <mark class="hidden" data-comment-timestamp="{{ new_indicator_timestamp }}"></mark>

  <footer>
    {{> 00-atoms/03-images/04-avatar }}
    <p>
      {{> 01-molecules/00-text/07-byline-commenter }}
    </p>

    {{# parent? }}
      <p class="visually-hidden">{{ parent }}</p>
    {{/ parent? }}

    {{ permalink }}
  </footer>

  <div{{ content_attributes }}>
    {{# content? }}
      {{ title_prefix }}
      <h3{{ content_title_attributes }}>{{ content_title }}</h3>
      {{ title_suffix }}
    {{/ content? }}
    {{> 01-molecules/06-components/02-single-comment }}
  </div>
</article>
