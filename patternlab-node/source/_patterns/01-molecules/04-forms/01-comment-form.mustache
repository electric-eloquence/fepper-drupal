        <textarea class="js-text-full text-full form-textarea required" id="edit-comment-body-0" name="comment_body[0]" rows="5" cols="60" placeholder="" required="required"></textarea>
      </div>
    </div>
  </div>
  <div class="field--type-language field--name-langcode field--widget-language-select js-form-wrapper form-wrapper" id="edit-langcode-wrapper">      
  </div>
