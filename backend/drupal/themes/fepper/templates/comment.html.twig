{{# templates-comment? }}
  {{{ fpo_template_content }}}
{{/ templates-comment? }}
<article{{ attributes.addClass('js-comment') }}>
  <mark class="hidden" data-comment-timestamp="{{ new_indicator_timestamp }}"></mark>

  <footer>
    {{ user_picture }}
    <p>
      {{ submitted }}
    </p>

    {{# parent? }}
      <p class="visually-hidden">{{ parent }}</p>
    {{/ parent? }}

    {{ permalink }}
  </footer>

  <div{{ content_attributes }}>
    {{# title? }}
      {{ title_prefix }}
      <h3{{ title_attributes }}>{{ title }}</h3>
      {{ title_suffix }}
    {{/ title? }}
    {{> 01-molecules/06-components/02-single-comment }}
  </div>
</article>
