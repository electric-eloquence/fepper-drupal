html
  font-size: (100 / 1.6)%
body
  background-color: $white
  font: 1.6em/1.5 $font-primary
  -webkit-text-size-adjust: 100%
  color: $gray-dark
  min-width: $bp-xx-max
  min-height: 100vh
  padding-bottom: $footer-height
  position: relative
  @media all and (max-width: $bp-sm-max)
    font-size: 1.4em
h1,
h2,
h3,
h4,
h5,
h6
  margin: 0.4rem 0
  padding: 0.4rem 0 0
h1, h2
  line-height: 1.2
h4
  font-size: 1.1em
h5
  font-size: 1.0625em
h6
  font-size: 1em
p
  .path-search &
    margin: 0
  .node--view-mode-teaser &
    .item-list &
      margin: 0
a
  color: $gray-dark
  text-decoration: none
  outline: 0
  &:hover, &:focus
    color: $gray
.text a,
a.text,
a.feed-icon,
p a,
[property="schema:text"] a
  text-decoration: underline
.node--view-mode-teaser
  [property="schema:text"],
  [property="text"]
    margin-top: 0.25em
    p
      margin: 0.25em 0
    p:first-child
      margin-top: 0
    p:last-child
      margin-bottom: 0
aside
  margin-bottom: $space
// Completely remove from the flow and screen readers.
.hidden
  display: none !important
  visibility: hidden !important
// Floats
.right
  float: right
  padding: 0 0 $space $space
.right-search
  float: right
  padding: 0 0 $space 0
.left
  float: left
  padding: 0 $space $space 0
// Text-align
.align-right
  text-align: right
.align-center
  text-align: center
.align-left
  text-align: left
// Hide elements in print view
@media print
  header.header,
  form,
  footer[role="contentinfo"]
    display: none
