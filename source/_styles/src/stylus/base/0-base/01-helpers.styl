// Clearfix
.cf
  &::before, &::after
    content: " "
    display: table
  &::after
    clear: both
// Layout Container
.lc
  clear: both
  max-width: $max-width
  margin: 0 auto
  padding: $space-half
// Completely remove from the flow but leave available to screen readers.
.visually-hidden
  position: absolute !important
  overflow: hidden
  width: 1px
  height: 1px
  padding: 0
  border: 0
  clip: rect(1px, 1px, 1px, 1px)
// Hoagies
.hoagies
  @media all and (max-width: $bp-xs-max)
    [role="article"]
      > div > div:first-of-type > a
        display: block
        max-width: 22.5rem
  @media all and (max-width: $bp-sm-max)
    [role="article"]
      > h2
        font-size: 1.8rem
  @media all and (min-width: $bp-small)
    .item-list
      margin-top: 0.5em
    .item-list li
      clear: both
      float: left
      margin-bottom: $space-and-half
    [role="article"]
      > h2,
      [property="schema:text"],
      [property="text"]
        float: right
        margin-top: 0
        padding: 0 1.6rem
        width: 70%
      img
        float: left
        height: auto
        width: 30%

// ////////////////////////////////////////////////////////////////////////////////////
// Stylus autoprefixing mixins
//
// Use
//   transform: translateX(10px) rotate(10deg) translateY(5px)
//
// These mixins can be safely updated or removed as vendor prefixes become unnecessary.
// ////////////////////////////////////////////////////////////////////////////////////
transform()
  -webkit-transform: arguments
  -moz-transform: arguments
  -ms-transform: arguments
  -o-transform: arguments
  transform: arguments
transition()
  -webkit-transition: arguments
  -moz-transition: arguments
  -ms-transition: arguments
  -o-transition: arguments
  transition: arguments
