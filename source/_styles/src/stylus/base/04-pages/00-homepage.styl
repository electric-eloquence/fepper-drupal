// ///////////////////////////////////////////////////////////////////////////////////
// The following only pertains to the demo site being used with the Fepper base theme.
// ///////////////////////////////////////////////////////////////////////////////////
.path-frontpage
  [id^="block-"][id$="content"]:first-child,
  [id^="block-"][id*="-views-block-content-recent-block"] .views-row,
  #region-content > .views-row
    margin-bottom: $space-half
    position: relative
  [id^="block-"][id$="content"]:first-child .views-field-title
    background-color: $dim
    bottom: 0
    left: 0
    padding: 1.2rem 0.8rem
    position: absolute
    width: 100%
    a
      color: $white
      display: block
  [id^="block-"][id*="-views-block-content-recent-block"],
  #region-content >
    .views-row
      .views-field-title
        a
          background-color: $dim
          bottom: 0
          left: 0
          color: $white
          display: block
          padding: 1.2rem 0.8rem
          position: absolute
          width: 100%
  #region-content .views-row .views-field-title
    font-weight: bold
    line-height: 1.2
  [id^="block-"][id*="-views-block-content-recent-block"]
    // Crop and center 4:3 image to 16:9.
    .views-field-field-image
      overflow: hidden
      padding-top: 56.25%
      position: relative
      .field-content
        position: absolute
        margin-top: -37.5%
        top: 50%
.path-frontpage #region-content .views-row .views-field-title,
.view-id-content_recent [role="article"] > h2 // Also on the Blog page.
  font-size: 1.25em
