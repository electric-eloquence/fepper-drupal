// Hoagies
.hoagies
  [role="article"]
    > h2
      font-size: 1.25em
    [property="schema:text"],
    [property="text"]
      p
        margin: 0
  @media all and (max-width: $bp-xs-max)
    [role="article"]
      > div > div:first-of-type > a
        display: block
        max-width: 22.5rem
  @media all and (min-width: $bp-small)
    .item-list
      @extend .cf
      padding-top: $space-quarter
      li
        clear: both
        float: left
        margin-bottom: $space
    [role="article"]
      > h2,
      [property="schema:text"],
      [property="text"]
        float: right
        margin-top: 0
        padding: 0 0 0 $space
        width: $column-width-three-quarters + "%"
      img
        float: left
        width: $column-width-one-quarter + "%"
  @media all and (min-width: $bp-med)
    .item-list
      padding-right: $space
