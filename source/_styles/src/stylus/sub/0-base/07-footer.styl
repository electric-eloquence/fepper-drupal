footer[role="contentinfo"]
  background-color: $gray-dark-1
  color: $white
  a
    color: $gray-light
[id^="block-"][id$="-fepperfooter"]
  display: flex
  align-items: center
  flex-wrap: wrap
  justify-content: space-between
  > div
    width: 100%
  p
    margin: 0.5rem 0
  @media all and (max-width: $bp-xs-max)
    text-align: center
  @media all and (min-width: $bp-med)
    text-align: right
