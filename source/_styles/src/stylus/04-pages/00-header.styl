header.header
  background: $white
  border-bottom: 1px solid $gray-light-3
  padding: 0
  @media all and (max-width: $bp-sm-max)
    margin: 0 0 0 $space-half
    width: "calc(100% - %s)" % $space-half
  @media all and (min-width: $bp-med) and (max-width: $bp-md-max)
    width: "calc(100% - %s)" % $space
  @media all and (min-width: $max-width)
    width: "calc(%s - %s)" % ($max-width $space)
#block-fepper-branding
  position: relative
  z-index: 1
  img
    float: left
    height: 3.7rem
    margin: 0.65rem 0
    @media all and (min-width: $bp-med)
      height: 4rem
/* Search and Navigation Forms */
#block-searchform,
#block-mainnavigation
  > h2
    background: $white-translucent
    border-left: 1px solid $gray-light-3
    color: transparent
    cursor: pointer
    float: right
    margin: 0
    width: 5.1rem
    height: 5rem
    overflow: hidden
    &::before
      color: $gray-dark
      float: right
      font-size: 2.1rem
      padding: 0.7em
    &:hover::before
      color: $gray
    @media all and (min-width: $bp-med)
      display: none
/* Search Form */
#block-searchform
  float: right
  > h2::before
    @extend .icon-search::before
/* Navigation */
nav
  li
    float: left
    margin-right: 1em
#block-mainnavigation
  > h2::before
    @extend .icon-menu::before
  ul
    background: $white-translucent
  a
    display: block
  @media all and (max-width: $bp-sm-max)
    > ul
      max-height: 0
      overflow: hidden
      position: absolute
      top: 5rem
      left: 0
      z-index: 1
    li
      border-top: 1px solid $gray-light-3
      float: none
      margin-right: 0
      a
        display: table
        padding: $pad-half $pad
      li
        padding-left: 2rem;
    &.open
      > ul
        max-height: 100%
        width: 100%
  @media all and (min-width: $bp-med)
    border-top: 1px solid $gray-light-2
    clear: none
    float: left
    margin-top: -0.1rem
    padding-top: $pad-quarter * 3
    position: static
    width: auto
    height: auto
    li
      float: left
      margin-right: 0
    a
      padding: $pad-quarter $pad
    .expanded
      > a::after
        color: $gray
        content: "â–¼"
        font-size: $font-size-sm
        margin-left: $space-half
      ul
        max-height: 0
        overflow: hidden
        transition: max-height 0.3s ease
        z-index: 2
        li
          float: none
          border: 1px solid $gray-light-2
          border-bottom: 0
          &:last-child
            border-bottom: 1px solid $gray-light-2
      &:hover
        ul
          max-height: 100%
    > ul > .expanded > ul
      position: absolute
      > .expanded li
        border-right: 0
        border-bottom: 0
        border-left: 0
      .expanded
        padding-left: 1rem
      ul
        background: transparent
