// Main Content Article
article[role="article"]
  margin-bottom: $space
  > footer
    font-size: 0.9em
    font-style: italic
    margin-bottom: 0.5em
#block-views-block-content-recent-block-3,
.view-id-content_recent.view-display-id-page_1
  @media all and (max-width: $bp-xs-max)
    article[role="article"]
      > div > div:first-of-type > a
        display: block
        max-width: 22.5rem
  @media all and (max-width: $bp-sm-max)
    article[role="article"]
      > h2
        font-size: 1.8rem
  @media all and (min-width: $bp-small)
    .item-list
      margin-top: 0.5em
    .item-list li
      clear: both
      float: left
      margin-bottom: $space-and-half
    article[role="article"]
      > h2,
      div[property="schema:text"],
      div[property="text"]
        float: right
        margin-top: 0
        padding: 0 1.6rem
        width: 70%
      img
        float: left
        height: auto
        width: 30%
