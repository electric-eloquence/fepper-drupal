/* Block */
.block
  overflow: hidden
  p:last-child
    margin-bottom: 0
/* Hero Block */
.front #block-fepper-content
  margin-bottom: 0.5em
  img
    display: block
  .views-field-title .field-content a
    font-size: 1.5em
    font-weight: bold
    line-height: 1.2
  @media all and (min-width: $bp-small)
    .views-field-title .field-content
      display: table-cell
      width: 70%
  @media all and (min-width: $bp-large)
    position: relative
    .views-field-title
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      background: rgba(0, 0, 0, 0.5)
      padding: 1.5em
      a
        color: $white
/* Block Thumbnail with Headline */
.block-thumb
  display: table
  width: 100%
  border-collapse: collapse
  .b-inner
    display: table-row
    vertical-align: top
    overflow: hidden
/* Touts Block */
.front #region-content > .views-row
  margin-bottom: 0.5em
  position: relative
  .views-field-field-image
    position: relative
    z-index: 0
    img
      display: block
  .views-field-title
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    color: $white
    a
      background: rgba(0, 0, 0, 0.5)
      color: $white
      display: block
      padding: 0.5em
      font-size: 1.1em
      font-weight: bold
@media all and (min-width: $bp-small) and (max-width: $bp-large - 1px)
  .front #block-fepper-content,
  .front #region-content > .views-row
    width: calc(50% - 0.4rem)
  #block-fepper-content
    position: relative;
    .views-field-field-image
      padding-top: 75%
      .field-content
        position: absolute
        top: 0
        left: 0
    .views-field-title
      background: $dim
      overflow: hidden
      padding: $pad-half
      position: absolute
      bottom: 0
      left: 0
      width: 100%
      height: 7.36rem
      a
        color: $white
@media all and (min-width: $bp-large)
  .front #block-fepper-content
    width: 100%
  .front #region-content > .views-row
    padding-top: $pad-half
    width: calc(33.3333333% - 1.0666666rem)
