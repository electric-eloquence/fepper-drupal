/* Main Content Article */
article[role="article"] > footer
  font-size: 0.875em
  font-style: italic
  margin-bottom: 0.5em
#block-fepper-content
  > article[role="article"] > h1
    font-size: 2.5em
@media all and (min-width: $bp-small)
  #block-views-block-content-recent-block-3,
  #views-view-content-recent-page-1
    .item-list
      margin-top: 0.5em
    .item-list li
      clear: both
      float: left
      margin-bottom: 1em
    article[role="article"]
      > h2,
      div[property="schema:text"],
      div[property="text"]
        float: right
        margin-top: 0
        padding: 0 1.6rem
        width: 70%
      img
        float: left
        height: auto
        width: 30%
