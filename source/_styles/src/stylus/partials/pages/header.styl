header.header
  background: $white
  border-bottom: 1px solid $gray-light-3
  height: 5.1rem
  padding: 0
  @media all and (min-width: $bp-med)
    height: 5.6rem
#block-fepper-branding
  position: relative
  z-index: 1
  img
    float: left
    height: 3.7rem
    margin: 0.65rem
    @media all and (min-width: $bp-med)
      height: 4.2rem
/* Search Form */
#block-searchform
  float: right
h2[class^="icon-"]
  background: $white-translucent
  border-left: 1px solid $gray-light-3
  color: transparent
  cursor: pointer
  float: right
  margin: 0
  width: 5.1rem
  height: 5rem
  overflow: hidden
  &::before
    color: $gray-dark
    float: right
    font-size: 2.1rem
    padding: 0.7em
  &:hover::before
    color: $gray
  @media all and (min-width: $bp-med)
    display: none
