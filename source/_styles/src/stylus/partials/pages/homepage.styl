/* Layout Container */
.front .layout-content
  border-bottom: 2px solid $gray-light-2
  margin-bottom: 1em
  padding: 0 0 2em
  width: 100%
  #region-content
    display: flex
    flex-wrap: wrap
    justify-content: space-between
/* Touts Block */
.front #region-content > .views-row
  margin-bottom: 0.5em
  position: relative
  .views-field-field-image
    position: relative
    z-index: 0
    img
      display: block
  .views-field-title
    position: absolute
    bottom: 0
    left: 0
    width: 100%
    color: $white
    a
      background: rgba(0, 0, 0, 0.5)
      color: $white
      display: block
      padding: 0.5em
      font-size: 1.1em
      font-weight: bold
@media all and (min-width: $bp-small) and (max-width: $bp-med-2 - 1px)
  .front #block-fepper-content,
  .front #region-content > .views-row
    width: calc(50% - 0.4rem)
@media all and (min-width: $bp-med-2)
  .front #block-fepper-content
    width: 100%
  .front #region-content > .views-row
    padding-top: $pad-half
    width: calc(33.3333333% - 1.0666666rem)
