// Only in Drupal, not Fepper.
#region-breadcrumb,
#breadcrumb
  font-size: 0.875em
  font-weight: bold
  ol
    display: flex
    flex-wrap: wrap
  li
    margin-right: 0
    &::before
      content: "  \BB "
      white-space: pre
    &:first-child::before
      content: none
#region-highlighted
  @extend .cf
  padding-top: 0
  padding-bottom: 0
  [role="contentinfo"]
    border-width: 1px
    border-style: solid
    margin-top: $space-half
    padding: $space-half
    a
      text-decoration: underline
  [aria-label="Status message"]
    background-color: #f8fff0
    border-color: #be7
    &, & a
      color: #234600
  [aria-label="Warning message"]
    background-color: #fffce5
    border-color: #ed5
    &, & a
      color: #840
  [aria-label="Error message"]
    background-color: #fef5f1
    border-color: #ed541d
    &, & a
      color: #f00
[id^="block-"][id$="-local-tasks"]
  margin-top: $space
  margin-bottom: $space
  > ul
    display: flex
    flex-wrap: wrap
    li
      border-bottom: 1px solid $gray-light-2
      margin-bottom: 0.25em
      padding: 0 0.25em
      a
        background-color: $gray-light-2
        border-radius: 0.25em 0.25em 0 0
        border-top: 1px solid $gray-light-2
        border-right: 1px solid $gray-light-2
        border-left: 1px solid $gray-light-2
        display: block
        padding: 0 0.5em
        &.is-active
          background-color: $white
          pointer-events: none
[id^="block-"][id$="-powered"]
  font-size: 0.875em
[id^="block-"][id$="-tools"]
  z-index: 1
  ul
    list-style: disc
#edit-contact label
  display: inline
#site-name
  font-size: 2em
  font-weight: bold
  line-height: 1.25
  margin-top: $space-half
  @media all and (min-width: $bp-med)
    display: inline-block
.no-sidebar-second
  width: 100% !important
  #edit-advanced
    display: block
    summary
      cursor: pointer
  #edit-help-link
    margin-top: $space-quarter
  #search-form > *
    display: inline-block
.path-contact,
.path-search,
.path-user
  [id^="block-"][id$="-content"]
    margin-bottom: 1em
.path-search
  [id^="block-"][id$="-content"] > *:not(nav) > li
    margin: 1em 0
  [id^="block-"][id$="-content"] p:nth-of-type(2)
    font-size: 0.875em
    margin-top: 0.5em
  details
    margin-top: 0.5em
    summary
      &:hover,
      &:focus
        color: $gray
        cursor: pointer
    fieldset[id^="edit-"][id$="-fieldset"]
      margin: 0.5em 0
    legend
      font-weight: bold
    #edit-type--wrapper legend
      font-weight: normal
    #edit-language--wrapper legend
      display: none
    .form-item label
      padding: 0
    .criterion
      .form-item > *
        display: inline-block
.skip-link
  @media all and (max-width: $bp-sm-max)
    display: none
