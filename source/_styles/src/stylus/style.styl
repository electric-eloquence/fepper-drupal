// Only in Drupal, not Fepper.
#region-secondary-menu
  padding-top: 0
  padding-bottom: 0
#region-primary-menu
  padding-bottom: 0
#region-primary-menu + #region-secondary-menu
  padding-top: 0
#region-breadcrumb,
#breadcrumb
  font-size: 0.875em
  font-weight: bold
  li
    margin-right: 0
    &::before
      content: "  \BB "
      white-space: pre
    &:first-child::before
      content: none
#region-highlighted
  @extend .cf
  padding-top: 0
  padding-bottom: 0
  [role="contentinfo"]
    border-width: 1px
    border-style: solid
    margin-top: $space-half
    padding: $space-half
    a
      text-decoration: underline
  [aria-label="Status message"]
    background-color: #f8fff0
    border-color: #be7
    &, & a
      color: #234600
  [aria-label="Warning message"]
    background-color: #fffce5
    border-color: #ed5
    &, & a
      color: #840
  [aria-label="Error message"]
    background-color: #fef5f1
    border-color: #ed541d
    &, & a
      color: #f00
// By default, this contains the contact link.
// For whatever reason, by default, Drupal places this in the header.
// We only need these styles when this is in the header.
[id^="block-"][id$="-footer"]
  #region-header &
    @extend .cf
    > *
      display: block
[id^="block-"][id$="-local-tasks"]
  @extend .cf
  margin-top: $space
  margin-bottom: $space
  [href="/user/login"]
    @extend .visually-hidden
[id^="block-"][id$="-powered"]
  font-size: 0.875em
[id^="block-"][id$="-tools"]
  z-index: 1
#edit-contact label
  display: inline
#site-name
  font-size: 2em
  font-weight: bold
  line-height: 1.25
  margin-top: 0.2em
  @media all and (min-width: $bp-med)
    display: inline-block
    vertical-align: text-bottom
.no-sidebar-second
  width: 100% !important
  #edit-advanced
    display: block
    summary
      cursor: pointer
  #edit-help-link
    margin-top: $space-quarter
  #search-form > *
    display: inline-block
.path-contact,
.path-user
  [id^="block-"][id$="-content"]
    margin-bottom: $space
.path-search
  details:hover
    color: $gray
  form,
  form + h3,
  [id^="block-"][id$="-content"] ol
    margin-bottom: $space
  [id^="block-"][id$="-content"] h2 + ol li
    margin: $space 0
.skip-link
  @media all and (max-width: $bp-sm-max)
    display: none
