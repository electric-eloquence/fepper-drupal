// Only in Drupal, not Fepper.
#block-fepper-branding
  a + a
    display: none
#region-highlighted
  padding-top: 0
  padding-bottom: 0
  @extend .cf
  div[role="contentinfo"]
    border-width: 1px
    border-style: solid
    padding: $pad-half
    a
      text-decoration: underline
  div[aria-label="Status message"]
    background-color: #f8fff0
    border-color: #be7
    &, & a
      color: #234600
  div[aria-label="Warning message"]
    background-color: #fffce5
    border-color: #ed5
    &, & a
      color: #840
  div[aria-label="Error message"]
    background-color: #fef5f1
    border-color: #ed541d
    &, & a
      color: #f00
#region-primary-menu
  padding-bottom: 0
#region-secondary-menu
  padding-top: $pad-and-half
#region-primary-menu + #region-secondary-menu
  padding-top: 0
#region-breadcrumb,
#breadcrumb
  font-size: 0.75em
  font-weight: bold
#block-fepper-page-title
  display: none
#block-fepper-local-tasks
  padding-bottom: $pad
  a[href="/user/login"]
    display: none
.no-sidebar-second
  width: 100%
#block-fepper-search
  h2
    display: none
#block-fepper-footer
  clear: both
details
  padding-bottom: $pad
#edit-contact
  label
    display: inline
