// Only in Drupal, not Fepper.
[id^="block-fepper-"][id$="-branding"]
  a + a
    @extend .visually-hidden
#region-highlighted
  @extend .cf
  padding-top: 0
  padding-bottom: 0
  [role="contentinfo"]
    border-width: 1px
    border-style: solid
    margin-top: $space-half
    padding: $space-half
    a
      text-decoration: underline
  [aria-label="Status message"]
    background-color: #f8fff0
    border-color: #be7
    &, & a
      color: #234600
  [aria-label="Warning message"]
    background-color: #fffce5
    border-color: #ed5
    &, & a
      color: #840
  [aria-label="Error message"]
    background-color: #fef5f1
    border-color: #ed541d
    &, & a
      color: #f00
#region-primary-menu
  padding-bottom: 0
#region-secondary-menu
  padding-top: 0
  padding-bottom: 0
#region-primary-menu + #region-secondary-menu
  padding-top: 0
#region-breadcrumb,
#breadcrumb
  font-size: 0.75em
  font-weight: bold
[id^="block-fepper-"][id$="-page-title"]
  width: 100%
  .path-node &
    @extend .visually-hidden
[id^="block-fepper-"][id$="-local-tasks"]
  padding-top: $space
  padding-bottom: $space
  [href="/user/login"]
    @extend .visually-hidden
.no-sidebar-second
  width: 100% !important
.path-search
  h2
    margin: $space-and-half 0
  #search-form > *
    display: inline-block
  #edit-help-link
    margin-top: $space-quarter
[id^="block-fepper-"][id$="-search"]
  @extend .cf
  h2
    @extend .visually-hidden
[id^="block-fepper-"][id$="-footer"]
  @extend .cf
  clear: both
  margin-top: 0.5em
details
  padding-bottom: $space
#edit-contact label
  display: inline
[id^="block-fepper-"][id$="-tools"]
  z-index: 1
