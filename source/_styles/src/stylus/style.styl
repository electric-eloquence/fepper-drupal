// Only in Drupal, not Fepper.
div.status,
div.error
  background-image: none
#block-fepper-branding
  a + a
    display: none
#region-highlighted
  padding-top: 0
  padding-bottom: 0
  @extend .cf
  div[aria-label="Error message"]
    background-color: #fef5f1
    border: 1px solid #ed541d
    padding: $pad-half
    &, & a
      color: #f00
    & a
      text-decoration: underline
#region-primary-menu
  padding-bottom: 0
#region-secondary-menu
  padding-top: $pad-and-half
#region-primary-menu + #region-secondary-menu
  padding-top: 0
#region-breadcrumb,
#breadcrumb
  font-size: 0.75em
  font-weight: bold
#block-fepper-page-title
  display: none
#block-fepper-local-tasks
  padding-bottom: $pad
  a[href="/user/login"]
    display: none
.no-sidebar-second
  width: 100%
#block-fepper-search
  h2
    display: none
#block-fepper-footer
  clear: both
details
  padding-bottom: $pad
#edit-contact
  label
    display: inline
