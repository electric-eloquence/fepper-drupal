<!-- Begin block -->
<div{{{ block_attributes }}}>
  {{ title_prefix }}
  {{# block_label }}
    <h2{{{ title_attributes }}}>{{ block_label }}</h2>
  {{/ block_label }}
  {{ title_suffix }}
  {{# content? }}

    {{! BEGIN HEADER }}

    {{# elements-logo? }}
      {{> 00-elements/04-images/00-logo }}
    {{/ elements-logo? }}
    {{# compounds-search? }}
      {{> 01-compounds/04-forms/00-search }}
    {{/ compounds-search? }}

    {{! END HEADER }}


    {{! BEGIN HOMEPAGE }}

    {{# templates-container--pages-homepage__hero? }}
      {{> 03-templates/container("templates-views-view--pages-homepage__hero?": true) }}
    {{/ templates-container--pages-homepage__hero? }}
    {{# templates-container--pages-homepage__subs? }}
      {{> 03-templates/container("templates-views-view--pages-homepage__subs?": true) }}
    {{/ templates-container--pages-homepage__subs? }}
    {{# templates-container--pages-homepage__blog? }}
      {{> 03-templates/container("templates-views-view--pages-homepage__blog?": true) }}
    {{/ templates-container--pages-homepage__blog? }}

    {{! END HOMEPAGE }}


    {{! BEGIN BLOG }}

    {{# templates-container--pages-blog? }}
      {{> 03-templates/container("templates-views-view--pages-blog?": true) }}
    {{/ templates-container--pages-blog? }}

    {{! END BLOG }}


    {{! BEGIN ARTICLE }}

    {{# templates-node--pages-article? }}
      {{> 03-templates/node(
        "view_mode_full?": true,
        "components-article?": true
      ) }}
    {{/ templates-node--pages-article? }}
    {{# components-related-posts? }}
      {{> 02-components/04-sections/02-related-posts }}
    {{/ components-related-posts? }}
    {{# components-recent-comments? }}
      {{> 02-components/04-sections/01-recent-comments }}
    {{/ components-recent-comments? }}

    {{! END ARTICLE }}


    {{! BEGIN FOOTER }}

    {{# components-footer? }}
      {{> 02-components/00-global/01-footer }}
    {{/ components-footer? }}

    {{! END FOOTER }}

    {{{ fpo_template_content }}}

  {{/ content? }}
</div>
<!-- End block -->
